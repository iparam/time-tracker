= form_for @time_entry do |f|
  -if @time_entry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@time_entry.errors.count, "error")} prohibited this time_entry from being saved:"
      %ul
        - @time_entry.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :start_time
    = f.text_field :start_time
  .field
    = f.label :end_time
    = f.text_field :end_time
  .field
    = f.label :created_date
    = f.datetime_select :created_date
  .field
    = f.label :task_id
    = f.number_field :task_id
  .actions
    = f.submit 'Save'
