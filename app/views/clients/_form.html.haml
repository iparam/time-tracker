= form_for(@client, :html=>{:class=>"data-form"}) do |f|
  -if @client.errors.any?
    #error_explanation
      %h2= "#{pluralize(@client.errors.count, "error")} prohibited this time_entry from being saved:"
      %ul
        - @client.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name

  .field
    = f.label :description
    = f.text_field :description
  
  .actions
    = f.submit 'Save'
