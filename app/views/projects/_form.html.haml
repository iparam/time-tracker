= form_for(@project,:html=>{:class=>"data-form"}) do |f|
  -if @project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project.errors.count, "error")} prohibited this time_entry from being saved:"
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :estimated_budget
    = f.text_field :estimated_budget
  .field
    = f.label :hourly_rate
    = f.text_field :hourly_rate
  
  .field
    = f.label :client
    = f.collection_select :hourly_rate 

  .field
    = f.label :estimated_hour
    = f.text_field :estimated_budget
  .field
    = f.label :start_date
    = f.date_select :start_date
    .clear


  .field
    = f.label :end_date
    = f.date_select :end_date
  .actions
    = f.submit 'Save'
